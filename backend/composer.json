{
    "name": "kyuubisoft/backend",
    "description": "KyuubiSoft Personal Dashboard Backend API",
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "^8.2",
        "doctrine/dbal": "^3.8",
        "guzzlehttp/guzzle": "^7.9",
        "firebase/php-jwt": "^6.10",
        "monolog/monolog": "^3.5",
        "php-di/php-di": "^7.0",
        "php-di/slim-bridge": "^3.4",
        "pragmarx/google2fa": "^8.0",
        "predis/predis": "^2.2",
        "ramsey/uuid": "^4.7",
        "respect/validation": "^2.3",
        "slim/psr7": "^1.6",
        "slim/slim": "^4.12",
        "symfony/cache": "^7.0",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.8"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse src --level=6",
        "cs-check": "phpcs src --standard=PSR12",
        "cs-fix": "phpcbf src --standard=PSR12",
        "migrate": "php bin/migrate.php",
        "seed": "php bin/seed.php"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
