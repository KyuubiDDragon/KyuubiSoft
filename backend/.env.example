# Application
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost

# Database
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=kyuubisoft
DB_USERNAME=kyuubisoft
DB_PASSWORD=secret

# JWT
JWT_SECRET=your-256-bit-secret-key-here-change-in-production
JWT_ACCESS_TTL=900
JWT_REFRESH_TTL=604800
JWT_ISSUER=kyuubisoft
JWT_ALGORITHM=HS256

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PREFIX=kyuubisoft:

# Logging
LOG_CHANNEL=daily
LOG_LEVEL=debug

# ============================================================
# Feature Flags - Instance-Level Access Control
# ============================================================
# Use these to restrict features on a per-instance basis.
# This is useful for:
# - Setting up instances for other users with limited features
# - Disabling features that shouldn't be available
# - Creating "lite" installations
#
# Each feature can be set to different modes:
# - full (or true/1): Full access to all sub-features
# - disabled (or false/0): Feature completely disabled
# - Feature-specific modes (see below)
#
# If not set, defaults to "full" for all features.
# ============================================================

# Docker Management
# Modes: disabled, portainer_only, own, full
# - portainer_only: Only Portainer connections allowed (no direct Docker access)
# - own: Only self-added Docker hosts (no system socket)
# - full: Full access including system Docker socket
FEATURE_DOCKER=full

# Server Management
# Modes: disabled, own, full
# - own: Only SSH connections to user-added servers (no localhost)
# - full: Full access including localhost monitoring
FEATURE_SERVER=full

# Network Tools (Ping, DNS, Whois, etc.)
# Modes: disabled, limited, full
# - limited: Basic tools only (no SSH terminal, no port check)
# - full: All tools including SSH terminal
FEATURE_TOOLS=full

# Uptime Monitor
# Modes: disabled, full
FEATURE_UPTIME=full

# Invoice Management
# Modes: disabled, full
FEATURE_INVOICES=full

# Ticket System
# Modes: disabled, full
FEATURE_TICKETS=full

# API Tester
# Modes: disabled, limited, full
# - limited: Basic API testing (no auth headers)
# - full: Full access with auth header management
FEATURE_API_TESTER=full

# YouTube Downloader
# Modes: disabled, full
FEATURE_YOUTUBE=full

# Password Manager
# Modes: disabled, full
FEATURE_PASSWORDS=full

# Git Repository Dashboard (GitHub/GitLab)
# Modes: disabled, full
FEATURE_GIT=full

# SSL Certificate Monitor
# Modes: disabled, full
FEATURE_SSL=full

# Public Link Galleries
# Modes: disabled, full
FEATURE_GALLERIES=full

# Notes / Knowledge Base (Notion-like)
# Modes: disabled, full
FEATURE_NOTES=full

# ============================================================
# Example Configurations
# ============================================================
#
# Standard User (no Docker, no Server):
#   FEATURE_DOCKER=disabled
#   FEATURE_SERVER=disabled
#   FEATURE_TOOLS=limited
#
# Portainer-Only (Docker via Portainer only):
#   FEATURE_DOCKER=portainer_only
#   FEATURE_SERVER=own
#
# Minimal Installation:
#   FEATURE_DOCKER=disabled
#   FEATURE_SERVER=disabled
#   FEATURE_TOOLS=disabled
#   FEATURE_UPTIME=disabled
#   FEATURE_INVOICES=disabled
#   FEATURE_TICKETS=disabled
#   FEATURE_API_TESTER=disabled
#   FEATURE_YOUTUBE=disabled
#
