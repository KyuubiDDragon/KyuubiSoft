# =============================================================================
# KyuubiSoft - Produktions-Umgebungsvariablen
# =============================================================================
# Diese Datei als .env kopieren und ALLE Werte anpassen!
# =============================================================================

# ===================
# Application
# ===================
APP_ENV=production
APP_DEBUG=false
APP_URL=https://dev.kyuubisoft.com

# ===================
# Database (MySQL)
# ===================
# WICHTIG: Sichere Passw√∂rter verwenden!
DB_DATABASE=kyuubisoft
DB_USERNAME=kyuubisoft
DB_PASSWORD=HIER_SICHERES_PASSWORT_EINGEBEN
MYSQL_ROOT_PASSWORD=HIER_ROOT_PASSWORT_EINGEBEN

# ===================
# JWT Configuration
# ===================
# WICHTIG: Einen sicheren 256-bit Key generieren!
# Generieren mit: openssl rand -base64 32
JWT_SECRET=HIER_SICHEREN_KEY_EINGEBEN
JWT_ACCESS_TTL=900
JWT_REFRESH_TTL=604800
JWT_ISSUER=kyuubisoft

# ===================
# Redis
# ===================
REDIS_HOST=redis
REDIS_PORT=6379

# ===================
# CORS
# ===================
CORS_ALLOWED_ORIGINS=https://dev.kyuubisoft.com

# ===================
# Frontend Build
# ===================
VITE_API_URL=https://dev.kyuubisoft.com/api
